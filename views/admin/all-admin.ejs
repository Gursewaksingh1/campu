<body>
    <%- include('../includes/adminnav.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                
                    <table border="1px soild black">
                        <tr> 
                            <th> Name</th>
                            <th>Email</th>
                            <th>sinceInCompany</th>
                            <th>address</th>
                            <th> </th>
                        </tr>
                        <% for (let admin of prods) { %>
                        <tr>
                            <td><%=admin.name%></td>
                            <td><%=admin.email%></td>
                            <td><%=admin.sinceInCompany%></td>
                            <td><%=admin.address%></td>
                            <form action="delete-admin" method="POST">
                            <td>
                                <button type="submit" class="btn">delete</button>
                                <input type="hidden" name="adminid" value="<%=admin._id%>"</td></form>
