<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/adminnav.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                
                    <table border="1px soild black">
                        <tr> 
                            <th> Name</th>
                            <th>Email</th>
                            <th>Stream</th>
                            <th>inWhichYear</th>
                            <th> </th>
                        </tr>
                        <% for (let student of prods) { %>
                        <tr>
                            <td><%=student.name%></td>
                            <td><%=student.email%></td>
                            <td><%=student.stream%></td>
                            <td><%=student.inWhichYear%></td>
                            <td><a href="edit-student/<%=student._id%>" class="btn"> Update</a></td>
                            <form action="delete-student" method="POST">
                            <td>
                                <button type="submit" class="btn">delete</button>
                                <input type="hidden" name="studentid" value="<%=student._id%>"</td></form>
                        </tr>
                        <% } %>
                    </table>

            </div>
        <% } else { %>
            <h1>No students Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>